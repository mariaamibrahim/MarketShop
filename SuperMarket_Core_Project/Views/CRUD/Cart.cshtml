@model IEnumerable<SuperMarket_Core_Project.Models.Product>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cart</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Productbrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.Product) {
        <tr>
            <td>
                @item.Productbrand
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.Type
            </td>
            <td>
                @item.Color
            </td>
            <td>
                <a asp-controller="CRUD" asp-action="Edit" asp-route-id="@item.Productbrand">Edit</a> |
                <a asp-controller="CRUD" asp-action="Delete" asp-route-id="@item.Productbrand">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
